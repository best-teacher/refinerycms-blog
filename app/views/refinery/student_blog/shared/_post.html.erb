<% if post.live? %>
  <article class="student_blog_post" id="<%= dom_id(post) %>">
    <header>
      <h1><%= link_to post.title, refinery.student_blog_post_path(post) %></h1>
      <section class='details'>
        <time datetime="<%=l post.published_at.to_date, :format => :default %>" class='posted_at'>
          <%= t('created_at', :scope => 'refinery.student_blog.shared.posts', :when => l(post.published_at.to_date, :format => :short)) %>
        </time>
        <%= "#{t('by', :scope => 'refinery.student_blog.posts.show')} #{post.author.username}" if post.author.present? %>.
        <% if (categories = post.categories).any? %>
          <aside class='filed_in'>
            <%= t('filed_in', :scope => 'refinery.student_blog.posts.show') %>
            <%=raw categories.collect { |category| link_to category.title, refinery.student_blog_category_path(category) }.to_sentence %>
          </aside>
        <% end %>
        <% if (tags = post.tags).any? %>
          <aside class='tagged'>
            <%= t('tagged', :scope => 'refinery.student_blog.posts.show') %>
            <%=raw tags.collect { |tag| link_to tag, refinery.student_blog_tagged_posts_path(tag.id, tag.name.parameterize) }.to_sentence %>
          </aside>
        <% end %>
      </section>
    </header>
    <section class='clearfix'>
      <% if student_blog_post_teaser_enabled? %>
        <%= student_blog_post_teaser(post) %>
      <% else %>
        <%= post.body.html_safe %>
      <% end %>
    </section>
    <footer>
      <p>
        <%= link_to t('read_more', :scope => 'refinery.student_blog.shared.posts'), refinery.student_blog_post_path(post) if student_blog_post_teaser_enabled? %>
      </p>
      <aside class='comment_count'>
        <% if Refinery::StudentBlog::Post.comments_allowed? %>
          <% if post.comments.any? %>
             (<%= pluralize(post.comments.approved.count, t('singular', :scope => 'refinery.student_blog.shared.comments')) %>)
          <% else %>
                (<%= t('none', :scope => 'refinery.student_blog.shared.comments') %>)
          <% end %>
        <% end %>
      </aside>
    </footer>
  </article>
<% end %>
