<% content_for :title, "#{t('.student_blog_archive_for', :date => @archive_date.strftime('%B %Y'))}" %>

<% content_for :body do %>
  <h1><%= t('.student_blog_archive_for', :date => @archive_date.strftime('%B %Y')) %></h1>
  <% if @posts.any? %>
    <section id="student_blog_posts">
      <%= render :partial => "/refinery/student_blog/shared/post", :collection => @posts %>
    </section>
  <% else %>
    <p><%= t('.no_student_blog_articles_posted', :date => @archive_date.strftime('%B %Y')) %></p>
  <% end %>
<% end %>

<%= render :partial => '/refinery/student_blog/shared/body_content_right' %>

<%= render :partial => "/refinery/content_page" %>
<% content_for :stylesheets, stylesheet_link_tag('refinery/student_blog/frontend') %>
